<li id="list-<%= list.id %>" class="main-list-item margin-bottom-xsm">
  <div>
    <p>
      <%= link_to list_path(list.id) do %>
        <%= list.name %>
      <% end %>
    </p>
    <p>   </p>
    <%= link_to edit_list_path(list.id) do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
    <%= link_to list_path(list.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
  </div>
</li>