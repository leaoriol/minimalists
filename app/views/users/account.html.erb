<!-- created manually to go with users controller -->
<% provide(:title, "My Account") %>

  <div class="row margin-bottom-sm">
    <div class="col-xs-12 col-sm-12">
      <div class="banner center">
        <div class="row">
          <div class="margin-bottom-sm small-form left-align col-xs-12 col-md-6 col-md-offset-3">
            <h1 class="margin-bottom-sm center">Account Preferences</h1>
            <%= form_for @user do |f| %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true %>
              </div>
              <div class="actions">
                <%= f.submit "Save" %>
              </div>
            <% end %>
            <%= link_to "Change my password", edit_user_registration_path, class: "nav-links" %>
          </div>
        </div>
      </div>
    </div>
  </div>

