<p id="notice"><%= notice %></p>

<h1>Item To Categories</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_to_categories.each do |item_to_category| %>
      <tr>
        <td><%= item_to_category.item_id %></td>
        <td><%= item_to_category.category_id %></td>
        <td><%= link_to 'Show', item_to_category %></td>
        <td><%= link_to 'Edit', edit_item_to_category_path(item_to_category) %></td>
        <td><%= link_to 'Destroy', item_to_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

